<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel" />

        <EditText
            android:id="@+id/new_game_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:editable="true"
            android:inputType="textCapWords"
            android:selectAllOnFocus="true"
            android:text="@string/new_game"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_menu_invite" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/new_game_players_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="multipleChoice" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            tools:ignore="Suspicious0dp,UselessLeaf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_game_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_media_play"
            android:text="@string/start_game" />
    </LinearLayout>
</LinearLayout>