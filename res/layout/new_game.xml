<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/GameListLayout">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/GameTitleLayout">
        <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:text="@string/game_description" android:layout_gravity="center_vertical" android:textSize="24sp"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center_vertical" android:inputType="textCapWords" android:id="@+id/game_desc"></EditText>
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/new_game_players_list"></ListView>
</LinearLayout>
