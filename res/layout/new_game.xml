<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:id="@+id/GameListLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/GameTitleLayout">
        <Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/game_type_list" android:visibility="gone"></Spinner>
    </LinearLayout>
    <ListView android:layout_width="match_parent" android:id="@+id/new_game_players_list" android:layout_height="match_parent" android:choiceMode="multipleChoice"></ListView>
</LinearLayout>
