<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">

    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="horizontal" android:layout_width="match_parent">
    	<Spinner android:id="@+id/score_bid_amount" android:layout_height="wrap_content" android:layout_width="wrap_content" android:entries="@array/gamedef_fivehundred_bidamount"></Spinner>
            <Spinner android:layout_width="wrap_content" android:id="@+id/score_bid_type" android:layout_height="wrap_content" android:entries="@array/gamedef_fivehundred_bidtype"></Spinner>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <Button android:id="@+id/ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bid" android:layout_weight="1"></Button>
        <Button android:id="@+id/cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/cancel" android:layout_weight="1"></Button>
    </LinearLayout>
</LinearLayout>
