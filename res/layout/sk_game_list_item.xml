<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background_with_divider"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/gl_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceListItem"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/gl_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Last Played"
        android:textAppearance="?android:attr/textAppearanceListItem"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/gl_players"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gl_desc"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        android:text="List of players"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />
</RelativeLayout>