<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Game Description" android:gravity="center_horizontal" android:id="@+id/game_desc_title"></TextView>
    <HorizontalScrollView android:layout_width="match_parent" android:id="@+id/horizontalScrollView1" android:layout_height="match_parent">
     <ScrollView android:id="@+id/scrollView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:isScrollContainer="true" android:id="@+id/score_columns">
         </LinearLayout>

    </ScrollView>
  </HorizontalScrollView>

</LinearLayout>
