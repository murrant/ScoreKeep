<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bg" />

    <Button
        android:id="@+id/home_btn_gplus"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/home_logo"
        android:layout_marginLeft="32dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_recent_history"
        android:gravity="left|center_vertical"
        android:onClick="gotoDefaultHomeScreen" />

    <Button
        android:id="@+id/home_btn_new"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_logo"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_play_clip"
        android:gravity="left|center_vertical"
        android:onClick="newGame" />

    <FrameLayout
        android:id="@+id/home_history_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/home_btn_new"
        android:layout_marginTop="12dp">

        <FrameLayout
            android:id="@+id/home_history_frame_inner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</RelativeLayout>
