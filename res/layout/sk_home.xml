<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bg" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/home_logo"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/swap_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_preferences"
        android:gravity="left|center_vertical"
        android:onClick="gotoDefaultHomeScreen" />

    <ImageButton
        android:id="@+id/home_btn_new"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_logo"
        android:layout_marginRight="32dp"
        android:background="@drawable/ripple"
        android:contentDescription="@string/new_game"
        android:elevation="@dimen/fab_elevation"
        android:onClick="newGame"
        android:paddingLeft="2dp"
        android:src="@drawable/ic_menu_play_clip"
        android:stateListAnimator="@anim/fab" />


    <FrameLayout
        android:id="@+id/home_history_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/home_btn_new"
        android:layout_marginTop="12dp">

        <FrameLayout
            android:id="@+id/home_history_frame_inner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</RelativeLayout>
