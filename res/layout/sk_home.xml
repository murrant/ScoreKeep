<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:importantForAccessibility="no"
        android:src="@drawable/bg"
        android:background="@color/primary"
        android:paddingTop="20dp"
        android:paddingBottom="40dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/home_logo"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-25dp" />

    <Button
        android:id="@+id/swap_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_preferences"
        android:gravity="left|center_vertical"
        android:onClick="gotoDefaultHomeScreen" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/home_btn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_logo"
        android:layout_marginRight="32dp"
        android:contentDescription="@string/new_game"
        android:onClick="newGame"
        android:src="@drawable/ic_menu_play_clip"
        android:layout_marginTop="@dimen/fab_offset_center"
        android:cropToPadding="false" />


    <FrameLayout
        android:id="@+id/home_history_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/home_btn_new"
        android:layout_marginTop="12dp">

        <FrameLayout
            android:id="@+id/home_history_frame_inner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</RelativeLayout>
